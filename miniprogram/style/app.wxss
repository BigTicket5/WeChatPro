page {
  background:skyblue;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height:100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  min-height: 90%;
} 

.question {
  width: 90%;
  margin-top: 10%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border-radius: 3px; 
}

.question .qText {
  font-size: 40rpx;
  white-space: pre-line;
}

.question .qOption {
  padding-top: 20rpx;
  font-size: 35rpx;
  white-space: pre-line;
}

.question .radio {
  transform:scale(0.5);
}


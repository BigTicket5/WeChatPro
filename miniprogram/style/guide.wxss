page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.question {
  width: 90%;
  margin-top: 10%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  color: white;
  background:skyblue;
  border-radius: 3px; 
}

.question .qText {
  font-size: 35rpx;
  white-space: pre-line;
}

.question .qOption {
  padding-top: 20rpx;
  font-size: 30rpx;
  white-space: pre-line
}

.question .radio {
  transform:scale(0.5);
}


<!--pages/dbOperator/dbOperator.wxml-->
<view class="container">
  <!-- 查询记录 -->
  <view class="question" >
    <text class="qText" wx:if="{{queryResult}}" >{{queryResult.question_index}}.{{queryResult.question_text}}</text>
    <radio-group bindchange="radioChange">
        <label class="qOption" wx:for="{{queryResult.question_options}}" wx:for-item="opt" wx:for-index="index">
            <radio value="{{index}}" class="radio"/>{{opt}}
        </label>
    </radio-group>
  </view>
  <div class="nav">
      <button class="prev" size="mini" type="default" bindtap="prevStep">上一步</button>
      <button class="next" size="mini" type="default" bindtap="nextStep">下一步</button>
    </div>
</view>
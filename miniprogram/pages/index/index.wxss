/**index.wxss**/


@import "../../style/app.wxss";
page {
  background:#EDFAFF;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.userinfo {  
  position: relative;  
  width: 100%;  
  height: 50%;  
  color: #fff;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 320rpx;  
  height: 320rpx;  
  margin-top: 200rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  

.btnarea {
  margin-top:10px;
  border: 2px solid;
  border-radius:10px;
  border-color:coral;
}



